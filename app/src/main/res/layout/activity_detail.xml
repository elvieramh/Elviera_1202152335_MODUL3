<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="android.example.com.elviera_1202152335_modul3.DetailActivity">>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detailLogo"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:scaleType="fitXY"
            android:src="@drawable/aqua"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:textSize="35dp"
                android:text="Aqua"/>

            <TextView
                android:id="@+id/detailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="@string/desc_airmineral"/>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/bttlIndicator"
                    android:layout_width="200dp"
                    android:layout_height="180dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_indicator"/>


                <Button
                    android:id="@+id/btnRemove"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/bttlIndicator"
                    android:layout_toStartOf="@+id/bttlIndicator"
                    android:background="@drawable/ic_remove"/>

                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/bttlIndicator"
                    android:layout_toRightOf="@+id/bttlIndicator"
                    android:background="@drawable/ic_add"/>

                <TextView
                    android:id="@+id/nmbrIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bttlIndicator"
                    android:layout_centerHorizontal="true"
                    android:text="1L"
                    android:textSize="30dp"/>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>


</ScrollView>